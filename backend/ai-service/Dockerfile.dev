FROM node:20-alpine

WORKDIR /app/backend/ai-service

# Install curl for healthchecks and pnpm globally
RUN apk add --no-cache curl && \
    npm install -g pnpm ts-node-dev

# Copy common shared code first
COPY backend/common ../common

# Build common package
WORKDIR /app/backend/common
RUN pnpm install --no-frozen-lockfile && \
    pnpm run build

# Switch back to ai service directory
WORKDIR /app/backend/ai-service

# Copy package.json and install dependencies
COPY backend/ai-service/package.json ./
RUN pnpm install --include=dev

# Copy service source code
COPY backend/ai-service ./

EXPOSE 5000

CMD ["pnpm", "start:dev"]
