FROM node:20-alpine

WORKDIR /app/backend/worker-service

# Install curl for healthchecks and pnpm globally
RUN apk add --no-cache curl && \
    npm install -g pnpm ts-node-dev

# Copy common shared code first
COPY backend/common ../common

# Build common package
WORKDIR /app/backend/common
RUN pnpm install --no-frozen-lockfile && \
    pnpm run build

# Switch back to worker service directory
WORKDIR /app/backend/worker-service

# Copy package.json and install dependencies
COPY backend/worker-service/package.json ./
RUN pnpm install --include=dev

# Copy service source code
COPY backend/worker-service ./

# Expose port
EXPOSE 4001

# Start service
CMD ["pnpm", "start:dev"]
