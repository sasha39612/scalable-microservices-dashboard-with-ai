{
  "name": "microservices-dashboard",
  "author": "Oleksandr Stolyarov",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:start": "docker compose -f docker-compose.dev.yml up --build",
    "dev:docker:down": "docker compose -f docker-compose.dev.yml down -v",
    "prod:docker:build": "docker compose build",
    "prod:docker:up": "docker compose up -d",
    "prod:docker:down": "docker compose down",
    "prepare": "husky install",
    "test": "pnpm -r --filter '!.' test",
    "test:watch": "pnpm -r --filter '!.' test -- --watch",
    "test:coverage": "pnpm -r --filter '!.' test -- --coverage",
    "lint": "pnpm exec eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "build": "tsc -p tsconfig.build.json",
    "deploy:staging": "echo 'Deploying to staging... (replace with real command)'",
    "deploy:prod": "echo 'Deploying to production... (replace with real command)'"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@jest/types": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "snyk": "^1.1301.1",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2"
  },
  "dependencies": {
    "react-icons": "^5.5.0",
    "reflect-metadata": "^0.2.2"
  },
  "pnpm": {
    "hoist": true
  }
}